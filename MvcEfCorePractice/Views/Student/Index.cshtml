@{
}
@model IEnumerable<MvcEfCorePractice.Models.Student>

<div class="container">
    <h2 class="mb-4 text-center">Students List</h2>

    <!-- 🔍 SEARCH FORM -->
    <form asp-action="Index" method="get" class="d-flex justify-content-center mb-4">
        <input type="text"
               name="searchString"
               value="@Context.Request.Query["searchString"]"
               class="form-control w-50 me-2"
               placeholder="Search by Name or Age..." />
        <button type="submit" class="btn btn-primary me-2">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Clear</a>
    </form>

    <!-- ➕ ADD NEW BUTTON -->
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success shadow">+ Add New Student</a>
    </div>

    <!-- 🧾 STUDENT TABLE -->
    <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Name</td>
                        <td>@s.Age</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-muted">No students found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // optional: smooth focus on search input
        document.querySelector('input[name="searchString"]').focus();
    </script>
}
