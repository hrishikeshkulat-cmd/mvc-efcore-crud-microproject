<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcEfCorePractice</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcEfCorePractice.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            transition: background 1s ease, color 1s ease;
        }

        /* ========== DEFAULT THEME VARIABLES ========== */
        body {
            --main-bg: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            --accent-color: #00ffe1;
            --text-color: #e0e0e0;
            --button-bg: #00ffe1;
            --button-hover: #00bfa5;
            --shadow-color: rgba(0,255,255,0.4);
            --container-blur: rgba(255,255,255,0.05);
        }

            /* ========== DARK NEON ========== */
            body.theme-dark {
                --main-bg: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
                --accent-color: #00ffe1;
                --text-color: #e0e0e0;
                --button-bg: #00ffe1;
                --button-hover: #00bfa5;
                --shadow-color: rgba(0,255,255,0.4);
                --container-blur: rgba(255,255,255,0.05);
            }

            /* ========== SUNSET GLOW ========== */
            body.theme-sunset {
                --main-bg: linear-gradient(135deg, #ff9966, #ff5e62);
                --accent-color: #ffd37c;
                --text-color: #fff6f0;
                --button-bg: #ffcc70;
                --button-hover: #ffb347;
                --shadow-color: rgba(255,180,100,0.4);
                --container-blur: rgba(255,255,255,0.1);
            }

            /* ========== CYBER PURPLE ========== */
            body.theme-purple {
                --main-bg: linear-gradient(135deg, #41295a, #2F0743);
                --accent-color: #cba6ff;
                --text-color: #f3e8ff;
                --button-bg: #b388ff;
                --button-hover: #9575cd;
                --shadow-color: rgba(179,136,255,0.4);
                --container-blur: rgba(255,255,255,0.07);
            }

        /* ========== BASE STYLING ========== */
        body {
            background: var(--main-bg);
            color: var(--text-color);
            animation: fadeIn 1s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .navbar {
            background: rgba(0,0,0,0.35);
            backdrop-filter: blur(8px);
            border-bottom: 1px solid var(--shadow-color);
            box-shadow: 0 0 15px var(--shadow-color);
            transition: background 0.5s ease;
        }

        .navbar-brand {
            color: var(--accent-color) !important;
            font-weight: 700;
            text-shadow: 0 0 6px var(--accent-color);
            transition: color 0.5s ease;
        }

        .nav-link {
            color: var(--text-color) !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: var(--accent-color) !important;
                text-shadow: 0 0 5px var(--accent-color);
            }

        .container {
            background: var(--container-blur);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            margin-top: 40px;
            box-shadow: 0 0 25px var(--shadow-color);
            transition: all 0.6s ease;
        }

        h2, h4 {
            color: var(--accent-color);
            font-weight: 700;
            text-shadow: 0 0 8px var(--accent-color);
            transition: color 0.5s ease;
        }

        table.table {
            background-color: rgba(255,255,255,0.08);
            border-radius: 10px;
            overflow: hidden;
            color: var(--text-color);
            text-align: center;
        }

        table thead th {
            background-color: rgba(255,255,255,0.12);
            color: var(--accent-color);
            border: none;
        }

        table tbody tr:hover {
            background-color: rgba(255,255,255,0.15);
            transition: background 0.3s ease-in-out;
        }

        .btn-primary {
            background-color: var(--button-bg);
            border: none;
            color: #000;
            font-weight: 600;
            box-shadow: 0 0 10px var(--shadow-color);
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--button-hover);
                color: #fff;
                box-shadow: 0 0 20px var(--shadow-color);
            }

        .btn-warning {
            background-color: #ffbb33;
            border: none;
            color: #111;
            font-weight: 600;
        }

            .btn-warning:hover {
                background-color: #ffaa00;
                color: #fff;
            }

        .btn-danger {
            background-color: #ff4444;
            border: none;
            font-weight: 600;
        }

            .btn-danger:hover {
                background-color: #ff2222;
                box-shadow: 0 0 10px rgba(255,0,0,0.5);
            }

        footer {
            background: transparent;
            color: #aaa;
            text-align: center;
            padding: 15px 0;
            font-size: 14px;
        }

            footer a {
                color: var(--accent-color);
                transition: color 0.4s ease;
            }

                footer a:hover {
                    color: var(--button-hover);
                }

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(var(--accent-color), var(--button-hover));
            border-radius: 10px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(255,255,255,0.05);
        }

        /* subtle transition when switching themes */
        .theme-transition * {
            transition: all 0.6s ease !important;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MvcEfCorePractice</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- 🌈 Theme Switcher Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-info" href="#" id="themeDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Theme
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="themeDropdown">
                                <li><a class="dropdown-item" href="#" onclick="setTheme('dark')">Dark Neon</a></li>
                                <li><a class="dropdown-item" href="#" onclick="setTheme('sunset')">Sunset Glow</a></li>
                                <li><a class="dropdown-item" href="#" onclick="setTheme('purple')">Cyber Purple</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - MvcEfCorePractice -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- 🌈 Theme Switcher Script -->
    <script>
        function setTheme(theme) {
            const body = document.body;
            body.classList.add('theme-transition');
            setTimeout(() => body.classList.remove('theme-transition'), 1000);

            body.classList.remove('theme-dark', 'theme-sunset', 'theme-purple');
            body.classList.add('theme-' + theme);
            localStorage.setItem('selectedTheme', theme);
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('selectedTheme') || 'dark';
            document.body.classList.add('theme-' + savedTheme);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
